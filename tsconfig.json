{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "lib",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "umi"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "lib"]
}
